# Environment
NODE_ENV=development
PORT=3001

# Database
DATABASE_URL=postgresql://username:password@localhost:5432/pocket_stylist

# Cloudflare R2
R2_ACCESS_KEY_ID="your-r2-access-key"
R2_SECRET_ACCESS_KEY="your-r2-secret-key"
R2_ENDPOINT="https://your-account-id.r2.cloudflarestorage.com"
R2_BUCKET_NAME="pocket-stylist-files"

# Cloudflare Images
CLOUDFLARE_IMAGES_ACCOUNT_ID="your-account-id"
CLOUDFLARE_IMAGES_API_TOKEN="your-images-api-token"

# Auth0
AUTH0_DOMAIN="your-domain.auth0.com"
AUTH0_AUDIENCE="your-api-audience"

# CDN
CDN_BASE_URL="https://cdn.pocket-stylist.com"

# Claude API
CLAUDE_API_KEY=your_claude_api_key_here
CLAUDE_MODEL=claude-3-sonnet-20240229
CLAUDE_VISION_MODEL=claude-3-sonnet-20240229
CLAUDE_MAX_TOKENS=4096
CLAUDE_TEMPERATURE=0.7

# Redis
REDIS_URL=redis://localhost:6379
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=

# JWT
JWT_SECRET=your_jwt_secret_here_minimum_32_characters_long_secure_random_string
JWT_EXPIRES_IN=24h
JWT_REFRESH_EXPIRES_IN=7d

# CORS
FRONTEND_URL=http://localhost:3000

# Rate limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX=100
CLAUDE_RATE_LIMIT_WINDOW_MS=60000
CLAUDE_RATE_LIMIT_MAX=20

# Logging
LOG_LEVEL=info
LOG_FORMAT=json

# Cache
CACHE_TTL=3600
RECOMMENDATION_CACHE_TTL=1800

# AI Configuration
AI_RECOMMENDATION_BATCH_SIZE=10
AI_MAX_RETRIES=3
AI_RETRY_DELAY=1000

# Weather API (optional)
WEATHER_API_KEY=your_weather_api_key_here
WEATHER_API_URL=https://api.openweathermap.org/data/2.5
