{
	"compilerOptions": {
		"target": "ES2022",
		"module": "CommonJS",
		"moduleResolution": "node",
		"strict": true,
		"esModuleInterop": true,
		"allowSyntheticDefaultImports": true,
		"skipLibCheck": true,
		"forceConsistentCasingInFileNames": true,
		"declaration": true,
		"outDir": "../dist/server",
		"rootDir": ".",
		"resolveJsonModule": true,
		"typeRoots": ["../node_modules/@types", "./node_modules/@types"],
		"types": ["node", "jest"],
		"lib": ["ES2022", "DOM"]
	},
	"include": ["**/*.ts"],
	"exclude": ["node_modules", "dist", "**/*.test.ts", "jest.setup.js"]
}
